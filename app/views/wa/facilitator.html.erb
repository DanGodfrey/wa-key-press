<%= javascript_include_tag "kpa-facilitator" %>

<div class="alert-error team1 pregame team">
    <h2>Team 1</h2>
    <ul id="team1list">
    </ul>
</div>
<div class="pregame controls">
    <div class="tabbable tabs-left">
        <ul class="nav nav-tabs">
          <li id="kpa-controls-btn"  class="active"><a href="#" data-toggle="tab">Key Punch</a></li>
          <li id="zoom-controls-btn" class=""><a href="#" data-toggle="tab">Zoom</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="kpa-controls">
              <div class="form-horizontal row">
                  <div class="span4">
                      <div class="control-group">
                            <label class="control-label" for="return-location">Teleport Location:</label>
                            <select id="return-location">
                                <option>CampFire</option>
                            </select>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="duration">Duration (min):</label>
                            <select id="duration">
                                <option>15</option>
                                <option>30</option>
                                <option>45</option>
                            </select>
                        </div>
                    </div>
                    <div class="span2">
                        <div class="btn btn-success" id="startbtn">
                            Start Game 
                        </div>
                        <div class="btn btn-danger" id="clearbtn">
                            Clear Game
                        </div>
                    </div>
                </div>
          </div>
          <div class="tab-pane" id="zoom-controls">
                <div class="row">
                    <div class="span4 right-border">
                        <h4>Use a new or existing photo collection?</h4>
                        <div class="control-group">
                            <div class="controls">
                                <label class="radio inline">
                                    <input type="radio" name="optionsRadios" id="existing-collection" value="option1" checked=""/>
                                    Existing
                                </label>
                                <label class="radio inline">
                                    <input type="radio" name="optionsRadios" id="new-collection" value="option2" />
                                    New
                                </label>
                            </div>
                        </div>
                        <div class="form-horizontal">
                            <div class="control-group" id="existing-container">
                                <label class="control-label" for="photo-collections">Collection:</label>
                                <select class="inline" id="photo-collections">
                                    <option>
                                        
                                    </option>
                                    <%@collections.each do |collection|%>
                                        <option>
                                            <%=collection.name%>
                                        </option>
                                    <%end%>
                                </select>
                            </div>
                            <div id="new-container" class="hidden">
                                <div class="control-group" >
                                    <label class="control-label" for="collection-title">
                                        Title: 
                                    </label>
                                    <input type="text" id="collection-title"/>  
                                </div>
                                <form action='https://tipontia.s3.amazonaws.com' enctype='multipart/form-data' id='file_upload' method='post'>
                                    <input name='key' type='hidden' />
                                    <input name='AWSAccessKeyId' type='hidden' value='AKIAJFIREA26AFJBIXWQ' />
                                    <input name='acl' type='hidden' value='public-read' />
                                    <input name='success_action_status' type='hidden' value='200' />
                                    <input name='policy' type='hidden' />
                                    <input name='signature' type='hidden' />
                                    <div class="file-upload">
                                      <span class="btn btn-info fileinput-button">
                                          <span><i class="icon-plus icon-white"></i> Add Photos</span>
                                          <input type="file" name="file"/>
                                      </span>
                                    </div>
                                </form>
                            </div>
                            <div class="btn btn-success">
                                Request Participants
                            </div>
                        </div>    
                    </div>
                    <div class="span3" >
                            <div id="slider-code">
                            	<a class="buttons prev" href="#"><<</a>
                            	<div class="viewport">
                            		<ul class="overview" id="collection-images">
                                        <li></li>
                            		</ul>
                            	</div>
                            	<a class="buttons next" href="#">>></a>
                            </div>
                    </div>
                    
                </div>
          </div>
        </div>
     </div>
</div>
<div class="alert-info pregame team2 team">
    <h2>Team 2</h2>
    <ul id="team2list">
    </ul>
</div>


<div class="alert-error team1 ingame team">
    <h2>Team 1</h2>
    <div id="team1score" class="score">
    </div>
</div>
<div class="controls ingame">
    <div class="timer">
        <h1 id="timeRemaining"></h1>
    </div>
    <div class="container stop-container">
        <div class="btn btn-danger" id="stopbtn">
            Stop Game
        </div>
    </div>
</div>
<div class="alert-info ingame team2 team">
    <h2>Team 2</h2>
    <div id="team2score" class="score">
    </div>
</div>
